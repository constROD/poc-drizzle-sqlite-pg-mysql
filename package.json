{
  "name": "poc-drizzle-sqlite-pg-mysql",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "npx tsx watch ./src/index.ts --no-cache",
    "db:init": "sh ./setup/bash/db-init.sh",
    "db:start": "pnpm db:init && docker compose -f ./docker-compose.yaml up -d",
    "db:stop": "docker compose -f ./docker-compose.yaml down",
    "sqlite:generate": "pnpm drizzle-kit generate:sqlite --config=./drizzle.sqlite.config.ts",
    "sqlite:push": "pnpm drizzle-kit push:sqlite --config=./drizzle.sqlite.config.ts",
    "sqlite:introspect": "pnpm drizzle-kit introspect:sqlite --config=./drizzle.sqlite.config.ts",
    "sqlite:drop": "pnpm drizzle-kit drop --config=./drizzle.sqlite.config.ts",
    "sqlite:check": "pnpm drizzle-kit check:sqlite --config=./drizzle.sqlite.config.ts",
    "sqlite:up": "pnpm drizzle-kit up:sqlite --config=./drizzle.sqlite.config.ts",
    "sqlite:studio": "pnpm drizzle-kit studio --config=./drizzle.sqlite.config.ts",
    "pg:generate": "pnpm drizzle-kit generate:pg --config=./drizzle.pg.config.ts",
    "pg:push": "pnpm drizzle-kit push:pg --config=./drizzle.pg.config.ts",
    "pg:introspect": "pnpm drizzle-kit introspect:pg --config=./drizzle.pg.config.ts",
    "pg:drop": "pnpm drizzle-kit drop --config=./drizzle.pg.config.ts",
    "pg:check": "pnpm drizzle-kit check:pg --config=./drizzle.pg.config.ts",
    "pg:up": "pnpm drizzle-kit up:pg --config=./drizzle.pg.config.ts",
    "pg:studio": "pnpm drizzle-kit studio --config=./drizzle.pg.config.ts",
    "mysql:generate": "pnpm drizzle-kit generate:mysql --config=./drizzle.mysql.config.ts",
    "mysql:push": "pnpm drizzle-kit push:mysql --config=./drizzle.mysql.config.ts",
    "mysql:introspect": "pnpm drizzle-kit introspect:mysql --config=./drizzle.mysql.config.ts",
    "mysql:drop": "pnpm drizzle-kit drop --config=./drizzle.mysql.config.ts",
    "mysql:check": "pnpm drizzle-kit check:mysql --config=./drizzle.mysql.config.ts",
    "mysql:up": "pnpm drizzle-kit up:mysql --config=./drizzle.mysql.config.ts",
    "mysql:studio": "pnpm drizzle-kit studio --config=./drizzle.mysql.config.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "check:types": "tsc",
    "check:spell": "git diff --cached --name-only | npx cspell --no-summary --no-progress --no-must-find-files --file-list stdin",
    "check:all": "npx concurrently \"pnpm lint\" \"pnpm check:types\" \"pnpm check:spell\"",
    "lint:fix": "pnpm lint --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "mysql2": "^3.6.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/better-sqlite3": "^7.6.6",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "cspell": "^7.3.8",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  }
}
